<!DOCTYPE HTML>
<html>
    <head>
        <title>NEI!</title>
        <link rel="stylesheet" type="text/css" href="/styles/fonts.css">
        <link rel="stylesheet" type="text/css" href="/styles/site.css">
    </head>
    <body>
        <section class="content">
            <h1 class="main-header">Socialcast posts</h1>
            <ul>
                {{#each posts}}
                <li class="post">
                    <section>
                    <div class="user">
                        <span>{{user.name}}</span>
                    </div>
                    <p class="text">{{body}}</p>
                    {{#if likes}}<div class="likes">
                        <span>‚ù§ {{likes.length}}</span><span>{{#each likes}}<span class="like-user">{{user.name}}</span>{{/each}}</span>
                    </div>{{/if}}
                    <div class="comments">
                        <ul>
                            {{#each comments}}
                            <li><span class="commenter-name">{{user.name}}</span>: {{text}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    </section>
                </li>
                {{/each}}
            </ul>
        </section>

    </body>
</html>
